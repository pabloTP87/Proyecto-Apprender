<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".view.fragments.RegistryAgeFragment">

<TextView
        android:text="@string/question3"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question3"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/btnQst3"/>

<EditText
        android:background="@drawable/input_shape_stroke"
        android:layout_width="286dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtAge"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/question3"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.495"/>

<Button
        android:background="@drawable/btn_circle_line"
        android:layout_width="46dp"
        android:layout_height="47dp"
        android:drawableEnd="@drawable/ic_volume_up_black"
        android:paddingEnd="5dp"
        android:id="@+id/btnQst3"
        android:layout_marginTop="112dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"/>

<Button
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/verificar"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCheckAge"
        android:layout_marginBottom="152dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtAge"/>

<android.support.design.widget.FloatingActionButton
        app:borderWidth="0dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:src="@drawable/ic_mic_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/btnMicAge"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:fabSize="auto"
        app:maxImageSize="38dp"
        android:focusable="true"/>
</android.support.constraint.ConstraintLayout>