<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:context=".view.fragments.MarSilabasOneFragment">

    <Button
            android:id="@+id/btn_audio_marSil1"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_width="46dp"
            android:layout_height="47dp"
            android:background="@drawable/btn_circle_line"
            android:drawableEnd="@drawable/ic_volume_up_black"
            android:paddingEnd="5dp" />

    <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="10dp">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/camino"/>
    </android.support.v7.widget.CardView>

    <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

        <RadioButton
                android:id="@+id/sil_1"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_button_selector"
                android:button="@drawable/ic_rb_ca"/>

        <RadioButton
                android:id="@+id/sil_2"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_button_selector"
                android:button="@drawable/ic_rb_mi"/>

        <RadioButton
                android:id="@+id/sil_3"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_button_selector"
                android:button="@drawable/ic_rb_no" />

    </RadioGroup>

    <Button
            android:id="@+id/buttonVerificar"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/grey_unchecked"
            android:text="@string/verificar"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:textSize="20sp"/>
</LinearLayout>